@{
    ViewData["Title"] = "New Folder";
}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 d-flex justify-content-center">
            <h3>New Folder (@ViewData["CurrentPath"])</h3>
        </div>
        <div class="col-md-8"></div>
    </div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 d-flex justify-content-center text-center">
        @using (Html.BeginForm("Post", "Data", new { currentPath = ViewData["CurrentPath"] }, FormMethod.Post))
        {
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Folder Name</span>
                </div>
                @Html.TextBox("FolderName")
            </div>
            <button class="btn btn-primary" type="submit">Create</button>

        }
    </div>
    <div class="col-md-4"></div>
</div>


