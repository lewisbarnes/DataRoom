@{
    ViewData["Title"] = "Login";
}
@model UserModel
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 d-flex justify-content-center">
        <h3>Login</h3>
    </div>
    <div class="col-md-4"></div>
</div>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 d-flex justify-content-center text-center">
        @using (Html.BeginForm("LoginPost", "Auth", FormMethod.Post))
        {
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(m => m.Username)</span>
                </div>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">@Html.DisplayNameFor(m => m.Password)</span>
                </div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary" type="submit">Login</button>
            <h6>Quoting Reference: @ViewData["QuotingReference"]</h6>
            <h6>To gain access, please send an email to <a href="mailto:@ViewData["AccessRequestAddress"]">@ViewData["AccessRequestAddress"]</a> along with your quoting reference and company details</h6>
        }
    </div>
    <div class="col-md-4"></div>
</div>
@{
}
